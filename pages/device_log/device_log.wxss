/* pages/device_log/device_log.wxss */

.areaLineView{
  width: 100%;
  height: 36px;
  background-color: rgba(228, 227, 227, 0.808);
}

.areaPicker{
  width: auto;
  height: 100%;
  float: left;
  text-align: left;
  font-size: 16px; 
  min-width: 40%;
  margin-top: 6px;
  margin-left: 6px;
  color: rgb(114, 111, 111);
}
.timePicker{
  width: auto;
  height: 100%;
  float: right;
  text-align: right;
  color: rgb(114, 111, 111);
  font-size: 16px; 
  margin-top: 8px;
  margin-right: 6px;
}
.view_scroll{
   width: 100%;
   
}

.view_log_tip_show{
  display: block;
  margin-top: 150px;
  text-align: center;
  font-size: 18px;
  color: rgb(168, 164, 164);
}
.view_log_tip_hide{
  display: none;
}

.view_log_show{
  display: display;
}
.view_log_hide{
  display: none;
}
.line {
  width: 100%;
  height: 2px;
  background-color:rgba(170, 170, 170, 0.329);
}
.view_log_item{
  width: 100%;
  height: 90px;
}

.view_log_title{
  width: 100%; 
  line-height: 36px;
  margin-left: 3px;
  margin-top: 5px;
}

.text_log_user{
  font-size: 14px;
  float: left;
  line-height: 36px;
  /* color: rgba(131, 131, 136, 0.966); */
}
.label_log_count{
  line-height: 36px;
  font-size: 14px;
  color: rgba(131, 131, 136, 0.815);
  /* margin-left: 10px; */
}
.text_log_time{
 /* // width: auto; */
  font-size: 14px;
  line-height: 36px;
  margin-right: 5px;
  color: rgba(131, 131, 136, 0.815);
  float: right;
}
.view_log_msg{
  width: 100%;
  font-size: 14px;
  /* margin-left: 5px; */
  /* color: rgba(131, 131, 136, 0.815); */
  line-height: 28px;
  float:left;
}
.blank{
  width: 100%;
  height: 100px;
}