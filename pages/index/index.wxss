@keyframes paomadeng{ 0% { transform: translateX(100%); } 100% { transform: translateX(-100%); } }
.marquee{
    width: 100%;
    height: 50px;
    line-height: 44px;
    /* background:red; */
    display: block;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: clip;
    position: absolute;
    font-size: 28rpx;
    top: 360rpx;
}
.marquee .content{
    display: inline-block;
    position: relative;
    padding-right: 0px;
    animation: paomadeng 6s linear infinite;
    white-space: nowrap;
    margin-left: 0px;
    color:rgb(6, 138, 87);
    font-size: 22px;
    font-weight: 550;
}