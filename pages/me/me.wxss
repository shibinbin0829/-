/* 用户item */
.view_userItem {
  display: inline-block;
  width: 100%;
  margin-left: 10px;
  background-color: white;    
  /* justify-content: left; */
}

/* 用户logo */
.view_userItem_image{
  margin-top: 10px;
  margin-left: 10px;
  width: 40px;
  height: 40px;
}
.view_avatar{
    width: 60px;
    height: 60px;
    display:inline-block; 
    border-radius: 5px;
}
.space{
   width: 5px;
}
.view_userInfo{
     display: inline-block;
     margin-left: 10px;
     vertical-align: top;
}
.view_userInfo_ID{
     font-weight: bold;
     font-size: 18px;
     padding:2px 2px;
}

.view_userInfo_userLevel{
  font-size: 14px;
  padding: 6px 2px;
}
.seperate{
  height: 8px;
  background-color: #eee;
  margin-top: 20px;
}
.seperate3{
  height: 8px;
  background-color: #eee;
 
}
/* item 功能项 */
.view_item{
  width: 100%;
  height: 60px;
  background-color: white;
}
.seperate2{
  height: 1px;
  background-color: #eee;
  margin-left: 70px;
}
.view_item_logo_img{
    width:50px;
    height: 50px;
    float: left;
    margin-left: 10px;
    margin-right: 5px;
    margin-top: 5px; 
}
.view_item_logo_right{
    width:40px;
    height:40px;
    float: right;
    margin-right: 5px;
    margin-top: 10px;
}

.view_item_title{
  padding :0px 12px;
  line-height: 60px;
  font-size: 14px;
}
/* item箭头 */
.view_item_arrow{
  width: 20px;
  height: 20px;
  margin-top: 15px;
  margin-right: 10px;
  float: right; 
}

.view_item_msg{
  width: auto;
  float: left;
  font-size: 14px;
  line-height: 50px;
  display: none;
}






